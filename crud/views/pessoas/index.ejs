<%- include ('../partials/header.ejs') %>

    <h1>Pessoas</h1>
    <p><a type="button" class="btn btn-default" href="/pessoas/create">Adicionar Pessoas</a></p>
    
    <table class="table table-striped table-hover table-bordered">
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Cargo</th>
            <th>Ações</th>
        </tr>
        <% pessoas.map( pessoa => { %>
        <tr>
            <td><%= pessoa.id %></td>
            <td><%= pessoa.nome %></td>
            <td><%= pessoa.cargo %></td>
            <td>
                <div class="btn-group" role="group" aria-label="...">
                    <a type="button" class="btn btn-default" href="/pessoas/update/<%= pessoa.id %>">Editar</a>
                    <a type="button" class="btn btn-default" href="/pessoas/delete/<%= pessoa.id %>" onclick="return confirm('Deseja realmente excluir?')">Excluir</a>
                </div>
            </td>
        </tr>
        <% }) %>
    </table>

    <p><a type="button" class="btn btn-default" href="/pessoas">Voltar ao início</a></p>
    
<%- include ('../partials/footer.ejs') %>